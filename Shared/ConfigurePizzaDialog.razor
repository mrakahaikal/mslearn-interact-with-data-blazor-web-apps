@using BlazingPizza.Model;
@inject HttpClient HttpClient;

<div class="dialog-container">
    <div class="dialog">
        <div class="dialog-title">
            <h2>@Pizza.Special.Name</h2>
            @Pizza.Special.Description
        </div>
        <form class="dialog-body">
            <div>
                <label for="pizza-size">Size</label>
                <input type="range" id="pizza-size" min="@Pizza.MinimumSize" max="@Pizza.MaximumSize" step="1" />
                <span class="size-label">
                    @(Pizza.Size)" (Â£@(Pizza.GetFormattedTotalPrice()))
                </span>
            </div>
        </form>

        <div class="dialog-buttons">
            <button @onclick="OnCancel" class="btn btn-secondary mr-auto">Cancel</button>
            <span class="mr-centee">
                Price: <span class="price">@(Pizza.GetFormattedTotalPrice())</span>
            </span>
            <button @onclick="OnConfirm" class="btn btn-success ml-auto">Order ></button>
        </div>
    </div>
</div>

@code {
    [Parameter] public Pizza Pizza { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }
}